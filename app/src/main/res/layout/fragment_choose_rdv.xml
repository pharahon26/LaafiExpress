<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chooseRDVFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.chooseRDVFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.alamkanak.weekview.WeekView
        android:id="@+id/choose_frag_calendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:columnGap="8dp"
        app:headerRowTextColor="@color/primaryTextColor"
        app:timeColumnBackgroundColor="@color/colorAccentLight"
        app:timeColumnTextColor="@color/primaryTextColor"
        app:singleLineHeader="true"
        app:dayBackgroundColor="@color/primaryTextColor"
        app:eventTextColor="@color/primaryTextColor"
        app:todayBackgroundColor="@color/todayColor"
        app:timeColumnTextSize="12sp"
        app:headerRowBackgroundColor="@color/coloCustomLPrimaryLight"
        app:headerRowPadding="12dp"
        app:hourHeight="60dp"
        app:layout_constraintBottom_toTopOf="@id/choose_frag_confirme_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/choose_frag_confirme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/confirmer"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:shadowColor="@color/colorAccent"
        android:textColor="@color/colorPrimary" />

</androidx.constraintlayout.widget.ConstraintLayout>